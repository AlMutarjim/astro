---
import { Icon } from 'astro-icon/components';

const { platform, followers } = Astro.props;
---

<a href={`https://${platform}.com/ppmimadinah`}>
  <div class="card">
    <Icon name={platform} size={48} />
    <div class="followers">{followers} Followers</div>
    <div class="follow-button">Follow</div>
  </div>
</a>

<style>
  a {
    text-decoration: none;
    color: var(--md-sys-color-on-surface);
    margin:1em;
  }

  .card {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5em;
  }

  .platform {
    display: flex;
  }

  .followers {
    display: flex;
  }

  .follow-button {
    display: flex;
    background-color: var(--md-sys-color-primary-container);
    color: var(--md-sys-color-on-primary-container);
    font-size: 0.8em;
    padding: 10px 15px;
    border-radius: 16px;
  }
</style>
