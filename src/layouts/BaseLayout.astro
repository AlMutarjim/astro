---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Title from "../components/Title.astro";
import "../styles/global.css";
import "../styles/dark.css";
import { SEO } from "astro-seo";
import "@fontsource-variable/open-sans";

const { pageTitle, pageSubtitle } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
		<SEO
			title="PPMI Madinah"
			description="Persatuan Pelajar dan Mahasiswa Indonesia Madinah"
			openGraph={{
				basic: {
					title: "PPMI Madinah",
					type: "website",
					image: "https://ppmimadinah.gitlab.io/thumb.webp",
					url: "https://PPMIMadinah.gitlab.io/",
				},
			}}
			twitter={{
				card: "summary_large_image",
				site: "@ppmimadinah",
				creator: "@siddiqmsf",
				title: "PPMI Madinah",
				description:
					"Persatuan Pelajar dan Mahasiswa Indonesia Madinah",
				image: "https://ppmimadinah.gitlab.io/thumb.webp",
			}}
			extend={{
				link: [
					{ rel: "author", href: "Muhammad Siddiq" },
					{ rel: "copyright", href: "2025" },
					{ rel: "icon", href: "/favicon.ico" },
				],
				meta: [
					{
						name: "viewport",
						content: "width=device-width, initial-scale=1.0",
					},
				],
			}}
		/>
	</head>
	<body>
		<Header />
		<main id="main">
			<Title heading={pageTitle} subheading={pageSubtitle} />
			<slot />
			<Footer />
		</main>
		<script>
			import "../scripts/menu.js";
		</script>
	</body>
</html>
